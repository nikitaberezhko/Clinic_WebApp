@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DeletePatient

@{
    ViewData["Title"] = "Удаление пациента";
}

<div class="main">
    <div class="div-form-confirm-to-archive">
        <form class="confirm-to-archive-form" asp-page="/DeletePatient" asp-route-id="@Model.id">
            <legend class="confirm-to-archive-form-legend">Подтвердите действие</legend>
            <p style="margin-top: 7%;">Вы уверены что хотите удалить карту пациента?</p>
            <input class="confirm-to-archive-form-btn" type="submit" value="Да">
            <a class="cancel-to-archive-form-btn" asp-page="/MedicalCard" asp-route-id="@Model.id">Нет</a>
        </form>
    </div>
</div>