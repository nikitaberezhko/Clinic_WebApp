@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Clinic_WebApp.Pages.ChangeArchiveStatus

@{
    ViewData["Title"] = "Изменение статуса карты пациента";
}

<div class="main">
    <div class="div-form-confirm-to-archive">
        <form class="confirm-to-archive-form" asp-page="/ChangeArchiveStatus" asp-route-id="@Model.id">
            <legend class="confirm-to-archive-form-legend">Подтвердите действие</legend>
            <p style="margin-top: 7%;">Вы уверены что хотите сменить статус пациента?</p>
            <input class="confirm-to-archive-form-btn" type="submit" value="Да">
            <a class="cancel-to-archive-form-btn" asp-page="/PatientsList">Нет</a>
        </form>
    </div>
</div>
